<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="400dp">

    <ImageView
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:id="@+id/image_taici"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/text_subject_taici"
        android:text="subject"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_fuhao"
        android:layout_below="@id/text_subject_taici"
        android:text="--"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_intro_taici"
        android:layout_toRightOf="@id/text_fuhao"
        android:layout_alignBaseline="@id/text_fuhao"
        android:text="intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_alignBottom="@id/image_taici"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/comment_like"
            android:layout_width="20sp"
            android:layout_height="20sp"/>

        <TextView
            android:text="赞"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="20sp"

            />

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/index_comment"
            android:layout_width="20sp"
            android:layout_height="20sp"/>

        <TextView
            android:text="评论"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/showing_more"

            android:gravity="center_vertical"
            android:layout_marginLeft="80sp"
            />


    </LinearLayout>


</RelativeLayout>
