<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="400dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image_yuansheng"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"

        />
        <ImageView
            android:src="@mipmap/music_start"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >

        <TextView
            android:id="@+id/text_subject_yuansheng"
            android:text="subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/text_intro_yuansheng"
            android:text="intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/comment_like"
            android:layout_width="20sp"
            android:layout_height="20sp"/>

        <TextView
            android:text="赞"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="20sp"

            />

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/index_comment"
            android:layout_width="20sp"
            android:layout_height="20sp"/>

        <TextView
            android:text="评论"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/showing_more"

            android:gravity="center_vertical"
            android:layout_marginLeft="80sp"
            />

    </LinearLayout>

</LinearLayout>
