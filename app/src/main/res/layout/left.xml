<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="设置"
         android:layout_centerInParent="true"
          android:gravity="center_vertical"
          />
        <ImageView
            android:id="@+id/btnMenu1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@mipmap/noavatar_small"
            android:layout_width="wrap_content"

            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:text="城市 (北京)"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="8"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="关注微信账号"
            />
        <TextView
            android:text="fanpian101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="加入翻片qq群"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="版本更新"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="清理缓存"
            />
        <ImageView
            android:src="@mipmap/right_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="关于我们"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/right_go"

            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>
