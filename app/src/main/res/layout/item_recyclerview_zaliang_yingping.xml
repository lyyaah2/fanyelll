<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="450dp">

    <RelativeLayout
        android:id="@+id/RelativeLayout_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        >

        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image_yingping"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:text="影评"
            android:alpha="30"
            android:background="#a70505"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/textview_subject_yingping"
            android:text="subject"
            android:textSize="23sp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/textview_intro_yingping"
            android:layout_below="@id/textview_subject_yingping"
            android:text="intro"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_marginBottom="10dp"

        >

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/comment_like"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:text="赞"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="20sp"
            android:layout_gravity="center_vertical"

            />

        <ImageView
            android:layout_marginRight="10sp"
            android:src="@mipmap/index_comment"
            android:layout_width="20sp"
            android:layout_gravity="center_vertical"
            android:layout_height="20sp"/>

        <TextView
            android:text="评论"
            android:layout_marginRight="10sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/showing_more"

            android:gravity="center_vertical"
            android:layout_marginLeft="80sp"
            />


    </LinearLayout>


</LinearLayout>
